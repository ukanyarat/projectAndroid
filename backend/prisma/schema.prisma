generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model transfer_slip_info {
  id          String   @id @default(uuid()) 
  amount      Float
  sender      String
  recipient   String?
  date        String?
  time        String?
  slip_ref    String?
  created_at  DateTime @default(now()) 
  updated_at  DateTime @updatedAt  
}
